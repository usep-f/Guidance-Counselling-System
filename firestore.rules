rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    match /appointments/{appointmentId} {
      allow create: if signedIn() && request.resource.data.studentId == request.auth.uid;
      
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());

      allow update: if signedIn() && (
        isAdmin() || 
        (
          resource.data.studentId == request.auth.uid && 
          request.resource.data.studentId == request.auth.uid &&
          (
            request.resource.data.status == resource.data.status || 
            request.resource.data.status == "Cancelled"
          )
        )
      );
      
      allow delete: if isAdmin();
    }

    match /students/{uid} {
      allow read: if signedIn() && (request.auth.uid == uid || isAdmin());
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if signedIn() && request.auth.uid == uid && 
                   (request.resource.data.studentNo == resource.data.studentNo);
    }

    match /availability/{docId} {
      allow read: if signedIn();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin() || (
        signedIn() && 
        resource.data.appointmentId != null && 
        get(/databases/$(database)/documents/appointments/$(resource.data.appointmentId)).data.studentId == request.auth.uid
      );
    }

    match /inquiries/{inquiryId} {
      // Allow any logged-in student to create an inquiry for themselves
      allow create: if signedIn() && request.resource.data.studentId == request.auth.uid;
      // Allow only the owner or an admin to read it
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());
      // âœ… Allow Admin to update (reply)
      allow update: if isAdmin();
    }

    match /session_records/{recordId} {
      // Allow students to read their own records, only admins can write
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }

    match /counselor_schedule/{dateKey} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /weekly_schedule_template/{templateId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }
  }
}
