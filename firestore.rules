rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    match /appointments/{appointmentId} {
      allow create: if signedIn() && request.resource.data.studentId == request.auth.uid;
      
      // ✅ FIX: Allow read if it's YOUR appointment OR you are an Admin
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());

      // ✅ Allow students to update their own appointments (e.g., cancel), admins can always update
      allow update: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());
      
      // Delete restricted to admins only
      allow delete: if isAdmin();
    }

    match /students/{uid} {
      allow read, write: if signedIn() && request.auth.uid == uid;
      allow read: if isAdmin();
    }

    match /availability/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /inquiries/{inquiryId} {
      // Allow any logged-in student to create an inquiry for themselves
      allow create: if signedIn() && request.resource.data.studentId == request.auth.uid;
      // Allow only the owner or an admin to read it
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());
      // ✅ Allow Admin to update (reply)
      allow update: if isAdmin();
    }

    match /session_records/{recordId} {
      // Allow students to read their own records, only admins can write
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }

    match /counselor_schedule/{dateKey} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /weekly_schedule_template/{templateId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }
  }
}
