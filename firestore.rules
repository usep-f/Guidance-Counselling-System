rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    match /appointments/{appointmentId} {
      allow create: if signedIn() && request.resource.data.studentId == request.auth.uid;
      
      // âœ… FIX: Allow read if it's YOUR appointment OR you are an Admin
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());

      allow update, delete: if isAdmin();
    }

    match /students/{uid} {
      allow read, write: if signedIn() && request.auth.uid == uid;
      allow read: if isAdmin();
    }

    match /availability/{docId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /inquiries/{inquiryId} {
      // Allow any logged-in student to create an inquiry for themselves
      allow create: if signedIn() && request.resource.data.studentId == request.auth.uid;
      // Allow only the owner or an admin to read it
      allow read: if signedIn() && (resource.data.studentId == request.auth.uid || isAdmin());
      // âœ… Allow Admin to update (reply)
      allow update: if isAdmin();
    }

    match /session_records/{recordId} {
      // ðŸ”’ CLINICAL PRIVACY: Only admins can read or write session insights
      allow read, write: if isAdmin();
    }
  }
}
